<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fcf="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/white"
            android:paddingTop="2dp" >

            <ImageView
                android:id="@+id/imageViewRunner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/run_for_life"
                android:contentDescription="runimage" />

            <at.technikum.mti.fancycoverflow.FancyCoverFlow
                android:id="@+id/fancyCoverFlow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/relativeLayoutTable"
                android:layout_gravity="center_horizontal"
                fcf:maxRotation="45"
                fcf:scaleDownGravity="0.5"
                fcf:unselectedAlpha="0.3"
                fcf:unselectedSaturation="0.0"
                fcf:unselectedScale="0.4" />

            <RelativeLayout
                android:id="@+id/relativeLayoutTable"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_alignParentBottom="true"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp" >

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true" >

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left" >

                        <ImageView
                            android:id="@+id/imageViewGPS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="2dp"
                            android:src="@drawable/gps_red" />

                        <TextView
                            android:id="@+id/textViewGPS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Searching for gps..." />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left" >

                        <ImageView
                            android:id="@+id/imageViewSound"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="2dp"
                            android:src="@drawable/sound_red" />

                        <TextView
                            android:id="@+id/textViewSound"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Turn up media volume" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left" >

                        <ImageView
                            android:id="@+id/imageViewHeadphones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="2dp"
                            android:src="@drawable/headphones_red" />

                        <TextView
                            android:id="@+id/textViewHeadphones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plug in headphones" />
                    </TableRow>
                </TableLayout>

                <ImageButton
                    android:id="@+id/runButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="#0000"
                    android:src="@drawable/run" />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

    <ListView
        android:id="@+id/drawer_list"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>