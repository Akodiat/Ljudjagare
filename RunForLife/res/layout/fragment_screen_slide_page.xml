<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:id="@+id/mode_selector"
        android:weightSum="20" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="19"
            android:background="@drawable/coin_collector_bkg" >

            <ImageButton
                android:id="@+id/info_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_action_about" />

            <TextView
                android:id="@+id/info_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#77000000"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="#FFFFFF"
                android:visibility="invisible" 
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/select_mode_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="Image visualizing a game mode"
                android:padding="10dp"
                android:src="@drawable/coin_collect" />

            <ImageView
                android:id="@+id/previous_mode_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_action_previous_item"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/next_mode_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_action_next_item"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/select_mode_text"
            style="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:paddingTop="5dp"
            android:text="COIN COLLECTOR"
            android:textColor="#1c1c1f"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>