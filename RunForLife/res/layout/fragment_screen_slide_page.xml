<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20" 
        android:paddingBottom="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="19"
            android:padding="10dp" 
            android:background="@drawable/coin_pic">

            <ImageView
                android:id="@+id/select_mode_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="Image visualizing a game mode"
                android:src="@drawable/coin_collect" />

        </RelativeLayout>

        <TextView
            android:id="@+id/select_mode_text"
            style="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:paddingTop="5dp"
            android:text="COIN COLLECTOR"
            android:textColor="#1c1c1f"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>