<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:weightSum="20" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="19"
            android:background="@drawable/coin_pic" >

            <TextView
                android:id="@+id/select_mode_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="The idea of this mode is to collect coins by following a sound playing in the headphones."
                android:textSize="40sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/select_mode_text"
            style="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:paddingTop="5dp"
            android:text="COIN COLLECTOR"
            android:textColor="#1c1c1f"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>