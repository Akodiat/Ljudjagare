        <!-- android:visibility="gone"/> -->

        <TableLayout
            android:id="@+id/statistics_table"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <!-- 2 columns -->

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/time_desc"
                    android:layout_marginRight="8dp"
                    android:text="Time"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_table"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="00:00:00"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <!-- 2 columns -->

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="9dp" >

                <TextView
                    android:id="@+id/dist_desc"
                    android:layout_marginRight="8dp"
                    android:text="Distance"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dist_table"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="0.0m"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <!-- 2 columns -->

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="9dp" >

                <TextView
                    android:id="@+id/curr_pace_desc"
                    android:layout_marginRight="8dp"
                    android:text="Pace"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/curr_pace_table"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="0.0min/km"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <!-- 2 columns -->

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="9dp" 
                android:gravity="right">

                <TextView
                    android:id="@+id/avg_pace_table"
                    android:gravity="right"
                    android:text="Average: 0.0min/km"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </TableRow>

            <!-- 2 columns -->

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="9dp" >

                <TextView
                    android:id="@+id/curr_speed_desc"
                    android:layout_marginRight="8dp"
                    android:text="Current speed"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/curr_speed_table"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="0.0m/s"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <!-- 2 columns -->

          <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="9dp" 
                android:gravity="right" >

                <TextView
                    android:id="@+id/avg_speed_table"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="Average: 0.0m/s"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </TableRow>
        </TableLayout>

        <include
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/progress_bar" />
    </LinearLayout>

</RelativeLayout>